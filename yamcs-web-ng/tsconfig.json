{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es5",

    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",

    // Needed by angular
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,

    // This mainly to detect unused imports
    // (tslint has terrible support for this)
    "noUnusedLocals": true,

    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
